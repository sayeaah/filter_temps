{
  "name": "sample",
  "version": "1.0.0",
  "scripts": {
    "compileSass": "sass --watch src/scss:assets/css --no-source-map && build",
    "compilePug": "pug -w src/pug -o ./ -P",
    "start": "npm-run-all --parallel compileSass compilePug",
    "build": "postcss assets/css/style.css --replace --use autoprefixer"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0"
  }
}
